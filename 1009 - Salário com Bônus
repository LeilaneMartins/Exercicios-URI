#include <stdio.h>

int main() {

    char nome[30];
    double SalarioFixo, TotalVendas, SalarioFinal;

    scanf("%s", nome);
    scanf("%lf", &SalarioFixo);
    scanf("%lf", &TotalVendas);

    SalarioFinal = (SalarioFixo + (TotalVendas * 0.15));

    printf("TOTAL = R$ %.2lf\n", SalarioFinal);

    return 0;

}
